{
    "workbench.colorTheme": "Shades of Purple",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "black-formatter.path": "/home/devuser/.local/bin/black",
    "black-formatter.args": ["--line-length", "100"],
    "python.formatting.provider": "none",
    "flake8.path": "/home/devuser/.local/bin/flake8",
    "flake8.args": ["--max-line-length=100", "--ignore=E203,W503"],
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnSave": true,
    "mypy-type-checker.path": "/home/devuser/.local/bin/mypy",
    "mypy-type-checker.enabled": true,
    "terminal.integrated.profiles.linux": {
        "bash (Safety Check)": {
            "path": "/bin/bash",
            "args": ["-c", "safety check || true; exec bash"]
        }
    }
}
